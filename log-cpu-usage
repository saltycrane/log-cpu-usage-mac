#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 /path/to/logfile"
    exit 1
fi

log_file=$1

current_datetime=$(date +'%Y-%m-%d %H:%M:%S')

cpu_usage=$(top -l 1 -n 1 | grep "CPU usage" | awk '{print $3, $5, $7}' | tr -d '%')

if [ ! -f "$log_file" ]; then
    echo "Date Time User Sys Idle" > "$log_file"
fi

echo "$current_datetime $cpu_usage" >> "$log_file"
